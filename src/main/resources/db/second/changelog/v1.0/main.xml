<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="main.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1.0" author="RinTheCat">
        <tagDatabase tag="1.0"/>
    </changeSet>

    <include file="init_tables.sql" relativeToChangelogFile="true"/>

    <changeSet id="import_people" author="RinTheCat">
        <loadData
                schemaName="person"
                tableName="person"
                file="db/second/changelog/v1.0/data/people.csv"
                separator=";"
        />
    </changeSet>

    <changeSet id="import_ips" author="RinTheCat">
        <loadData
                schemaName="person"
                tableName="ip"
                file="db/second/changelog/v1.0/data/ips.csv"
                separator=";"
        />
    </changeSet>

    <changeSet id="import_groups" author="RinTheCat">
        <loadData
                schemaName="person"
                tableName="group"
                file="db/second/changelog/v1.0/data/groups.csv"
                separator=";"
        />
    </changeSet>

    <changeSet id="import_groups_and_people" author="RinTheCat">
        <loadData
                schemaName="person"
                tableName="groups_and_people"
                file="db/second/changelog/v1.0/data/groups_and_people.csv"
                separator=";"
        />
    </changeSet>

</databaseChangeLog>